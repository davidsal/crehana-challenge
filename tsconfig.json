{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@languages/*": ["src/languages/*"],
      "@routes/*": ["src/routes/*"],
      "@theme/*": ["src/theme/*"],
    }
  }
}
